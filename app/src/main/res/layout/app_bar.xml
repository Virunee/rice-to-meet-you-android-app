<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/background_banner"
    android:elevation="0dp"
    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/appbar_logo_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:src="@drawable/logo_red"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="0dp"
            android:padding="6dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                    <TextView
                        android:id="@+id/appbar_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/oswald_bold"
                        android:text="SOUNDBOARD"
                        android:textColor="@color/colorWhite"
                        android:textSize="28sp"
                        app:layout_constraintStart_toEndOf="@+id/appbar_logo_image"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_weight="2"
                        android:gravity="bottom" />
                    <TextView
                        android:id="@+id/appbar_text_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/appbar_logo_image"
                        android:text="by Virunee"
                        android:fontFamily="@font/oswald"
                        android:textSize="18sp"
                        android:layout_weight="1"
                        android:gravity="top"/>

        </LinearLayout>

    </LinearLayout>

</androidx.appcompat.widget.Toolbar>